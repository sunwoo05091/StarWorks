<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.starworks.mapper.BoardAttachMapper">

	<insert id="insertNotice">
		insert into attach (uuid, uploadpath, filename,
		filetype, bno)
		values (#{uuid}, #{uploadPath}, #{fileName},
		#{fileType}, #{bno} )
	</insert>

	<delete id="deleteNotice">

		delete from attach where uuid = #{uuid}

	</delete>

	<select id="findByBno"
		resultType="org.starworks.domain.BoardAttachVO">
		select * from attach where bno = #{bno}
	</select>

	<delete id="deleteAllNotice">

		delete attach where bno = #{bno}

	</delete>

	<select id="getOldFiles"
		resultType="org.starworks.domain.BoardAttachVO">

		select * from attach where uploadpath = to_char(sysdate -1 ,'yyyy\mm\dd')

	</select>


</mapper>
