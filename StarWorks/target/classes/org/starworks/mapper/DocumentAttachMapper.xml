<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.starworks.mapper.DocumentAttachMapper">

	<insert id="insertDocument">
		insert into attach (
		uuid, uploadpath, filename, filetype, dc_no
		)
		values (
		#{uuid}, #{uploadPath}, #{fileName},#{fileType}, #{dc_no} 
		)
	</insert>

	<delete id="deleteDocument">
		delete from attach 
		where uuid = #{uuid}
	</delete>

	<select id="findByDcno" resultType="org.starworks.domain.DocumentAttachVO">
		select * from attach 
		where dc_no = #{dc_no}
	</select>

	<delete id="deleteAllDocument">
		delete attach 
		where dc_no = #{dc_no}
	</delete>

	<select id="getOldFiles" resultType="org.starworks.domain.DocumentAttachVO">
		select * from attach 
		where uploadpath = to_char(sysdate -1 ,'yyyy\mm\dd')
	</select>

</mapper>
